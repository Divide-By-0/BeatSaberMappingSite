extends base.pug

block title
  title Beat Saber Automapper

block styles
  link(rel="stylesheet", type="text/css" href="/styles/home.css")

block main
  fieldset
    legend BeatSaber.js
    label Select Audio File(s):
    input(type="file", multiple)#songupload
    input(type="button", value="Clear Song List", onclick="clearsongs()")#clear
    hr
    div.flex#mappingoptions
      div
        p Note Speed:
        input(type="number", name="speed", min="5", max="40", value="20")
        label Expert
      div
        p Environment:
        input(type="radio", name="environment", value="DefaultEnvironment", checked)
        label Default
        br
        input(type="radio", name="environment", value="BigMirrorEnvironment")
        label Big Mirror
        br
        input(type="radio", name="environment", value="NiceEnvironment")
        label Nice
        br
        input(type="radio", name="environment", value="TriangleEnvironment")
        label Triangle
        br
        input(type="radio", name="environment", value="Origins")
        label Origins
        br
    hr
    label.small Remeber: Winners don't upload autogenerated maps to BeastSaber or use drugs
    br
    input(type="button", value="Create Maps", onclick="createmaps()", title="The map creation button: Tap it so you can beat it")#mapinput
    br

block scripts
  script(src="/scripts/DSP.js")
  script(src="/scripts/data.js")
  script(src="/scripts/BeatSaber.js")
  script(src="/scripts/files.js")
  script(src="/scripts/libvorbis.min.js")
  script(src="/scripts/home.js")
