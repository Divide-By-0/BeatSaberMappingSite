extends base.pug

block title
  title Beat Saber Automapper

block styles
  link(rel="stylesheet", type="text/css" href="/styles/home.css")

block main
  fieldset
    legend BeatSaber.js
    label Select Audio File(s):
    input(type="file", multiple)#songupload
    input(type="button", value="Clear Song List", onclick="clearsongs()")#clear
    hr
    table#mapoptions
      tr
        th Standard
        th One-handed
        th 90-degree
        th 360-degree
      tr
        td
          input(type="checkbox", disabled)
          label Easy
          br
          input(type="checkbox", disabled)
          label Normal
          br
          input(type="checkbox", disabled)
          label Hard
          br
          input(type="checkbox", disabled, checked)
          label Expert
          br
          input(type="checkbox", disabled)
          label Expert+
        td
          input(type="checkbox", disabled)
          label Easy
          br
          input(type="checkbox", disabled)
          label Normal
          br
          input(type="checkbox", disabled)
          label Hard
          br
          input(type="checkbox", disabled)
          label Expert
          br
          input(type="checkbox", disabled)
          label Expert+
        td
          input(type="checkbox", disabled)
          label Easy
          br
          input(type="checkbox", disabled)
          label Normal
          br
          input(type="checkbox", disabled)
          label Hard
          br
          input(type="checkbox", disabled)
          label Expert
          br
          input(type="checkbox", disabled)
          label Expert+
        td
          input(type="checkbox", disabled)
          label Easy
          br
          input(type="checkbox", disabled)
          label Normal
          br
          input(type="checkbox", disabled)
          label Hard
          br
          input(type="checkbox", disabled)
          label Expert
          br
          input(type="checkbox", disabled)
          label Expert+
    label.small#degree Automapper settings still WIP
    hr
    div.flex#mappingoptions
      div
        p Environment:
        input(type="radio", name="environment", disabled, checked)
        label Default
        br
        input(type="radio", name="environment", disabled)
        label Big Mirror
        br
        input(type="radio", name="environment", disabled)
        label Nice
        br
        input(type="radio", name="environment", disabled)
        label Triangle
        br
      div
        p Note Speed:
        input(type="number", min="5", max="40", value="10", disabled)
        label Easy
        br
        input(type="number", min="5", max="40", value="12", disabled)
        label Normal
        br
        input(type="number", min="5", max="40", value="15", disabled)
        label Hard
        br
        input(type="number", min="5", max="40", value="18", disabled)
        label Expert
        br
        input(type="number", min="5", max="40", value="20", disabled)
        label Expert+
    label.small#degree Automapper settings still WIP
    hr
    input(type="button", value="Create Maps", onclick="createmaps()")#mapinput
    br

block scripts
  script(src="/scripts/DSP.js")
  script(src="/scripts/data.js")
  script(src="/scripts/BeatSaber.js")
  script(src="/scripts/files.js")
  script(src="/scripts/libvorbis.min.js")
  script(src="/scripts/home.js")
